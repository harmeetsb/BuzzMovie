<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="application.buzzmovieselector.Activity.UserInformationActivity"
    tools:showIn="@layout/activity_user_information">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Name"
        android:id="@+id/nameView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username:"
        android:id="@+id/username"
        android:layout_below="@id/nameView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Harmeet"
        android:id="@+id/usernameView"
        android:layout_alignBaseline="@id/username"
        android:layout_alignParentEnd="true"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account Status:"
        android:id="@+id/accountStatus"
        android:layout_below="@id/usernameView"
        android:layout_marginTop="35dp"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="banned"
        android:id="@+id/statusView"
        android:layout_alignBaseline="@id/accountStatus"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number of Movies Searched:"
        android:id="@+id/textView2"
        android:layout_below="@id/statusView"
        android:layout_marginTop="35dp"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XYZ"
        android:id="@+id/searchView"
       android:layout_alignParentEnd="true"
        android:layout_alignBaseline="@id/textView2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number of Movies Rated:"
        android:id="@+id/textView4"
        android:layout_below="@id/searchView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TBD"
        android:id="@+id/ratedView"
        android:layout_alignBaseline="@id/textView4"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Login:"
        android:id="@+id/textView6"
        android:layout_below="@id/ratedView"
        android:layout_marginTop="35dp"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DATE"
        android:id="@+id/dateView"
       android:layout_alignBaseline="@id/textView6"
        android:layout_alignParentEnd="true"/>


    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Ban User"
        android:id="@+id/BanButton"
        android:layout_marginTop="35dp"
        android:layout_below="@id/textView6"
        android:onClick="onClickBan" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/backButton"
        android:layout_below="@id/BanButton"
        android:onClick="onClickBack" />
</RelativeLayout>
