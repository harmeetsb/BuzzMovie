<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="application.buzzmovieselector.MovieTab"
    android:background="#661800">

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffb3"
        android:textStyle="bold"
        android:textSize="30dp"
        android:fontFamily="Droid Sans Mono"
        android:text="Movie Search"
        android:id="@+id/searchText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <SearchView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/searchView"
        android:layout_centerVertical="true"
        android:background="#FFFFFF"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search Movie"
        android:id="@+id/movieButton"
        android:layout_below="@+id/searchView"
        android:onClick="onClickMovieSearch"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
